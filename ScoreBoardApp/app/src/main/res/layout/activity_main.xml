<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="TEAM A"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif"
                android:text="0"
                android:textColor="#000"
                android:textSize="56sp" />

            <Button
                android:id="@+id/a_1_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="#2196F3"
                android:text="+1 POINT"
                android:textColor="#fff"
                android:textSize="15sp"
                android:onClick="a1score"/>

            <Button
                android:id="@+id/a_2_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#2196F3"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="+2 POINT"
                android:textColor="#fff"
                android:textSize="15sp"
                android:onClick="a2score"/>

            <Button
                android:id="@+id/a_3_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#2196F3"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="+3 POINT"
                android:textColor="#fff"
                android:textSize="15sp"
                android:onClick="a3score"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:text="TEAM B"
                android:textColor="#000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif"
                android:text="0"
                android:textColor="#000"
                android:textSize="56sp" />

            <Button
                android:id="@+id/b_1_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="#2196F3"
                android:text="+1 POINT"
                android:textColor="#fff"
                android:textSize="15sp"
                android:onClick="b1score"/>

            <Button
                android:id="@+id/b_2_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#2196F3"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="+2 POINT"
                android:textColor="#fff"
                android:textSize="15sp"
                android:onClick="b2score"/>

            <Button
                android:id="@+id/b_3_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#2196F3"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="+3 POINT"
                android:textColor="#fff"
                android:textSize="15sp"
                android:onClick="b3score"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="RESET"
            android:id="@+id/reset"
            android:textSize="15sp"
            android:onClick="reset"/>

    </LinearLayout>

</LinearLayout>